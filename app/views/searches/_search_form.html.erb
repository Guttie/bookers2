<div class="container">
  <div class="row">
    <div class="cd-block mx-auto pt-2"> <!-- 左に３カラム空ける -->
      <% if user_signed_in? %> <!-- ユーザーがSigninしているかどうかを判定 -->
        <%= form_with url:search_path, method: :get, local: true do |f| %>
          <%= f.text_field 'search[value]' %>
          <%= f.select 'search[model]', options_for_select({ "User" => "user", "Book" => "book" }) %>
          <%= f.select 'search[how]', options_for_select({ "完全一致" => "complete", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"  }) %>
          <%= f.submit :"検索" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>