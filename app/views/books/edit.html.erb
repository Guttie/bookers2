<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>
<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
  <div class="form">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="form">
    <label>Opinion</label>
    <%= f.text_area :body %>
  </div>
  <div class="form">
    <%= f.submit "Update Book" %>
  </div>
<% end %>
<%= link_to 'Show', book_path(@book.id) %>
