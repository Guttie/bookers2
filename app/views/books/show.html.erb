<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/user_info", user: @user %>
      <%= render "books/new_book", book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %></br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, data: {confirm:"本当に消しますか？"} %></td>
          <% end %>
        </tr>
      </table>
      <table class="table">
        <tr>
          <% @book.book_comments.each do |book_comment| %>
            <td>
              <%= attachment_image_tag @book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
              <%= book_comment.user.name %>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
          <% end %>
        </tr>
      </table>
      <div>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>