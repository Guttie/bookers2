<h2>User Info</h2>
<%= image_tag('sample-author1.jpg') %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>あああああああ</th>
    </tr>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model: @book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

<h2>Books</h2>
<thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag('sample-author1.jpg') %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</tbody>

