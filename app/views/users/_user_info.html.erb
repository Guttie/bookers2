<h2>User Info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 63, 63, fallback: "no_image2.jpg", size: "63x63" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%= link_to user.followings.count, user_followings_path(user) %></th>
    </tr>
    <tr>
      <th>followers</th>
      <th><%= link_to user.followers.count, user_followers_path(user) %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <% if current_user.is_followed_by?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user), class: "btn btn-info", method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user), class: "btn btn-success", method: :post %>
    <% end %>
  <% end %>
</div>